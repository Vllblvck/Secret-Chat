<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane fx:id="window" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mypackage.chat.ChatController">
    <left>
        <VBox prefHeight="600.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="76.0" prefWidth="300.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: #9E2828;"
                               text="Users online:" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <ListView fx:id="usersOnline" prefHeight="542.0" prefWidth="300.0"/>
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="messages" pickOnBounds="false" prefHeight="495.0" prefWidth="662.0"/>
                <HBox prefHeight="63.0" prefWidth="600.0">
                    <children>
                        <TextArea fx:id="message" pickOnBounds="false" prefHeight="68.0" prefWidth="486.0"
                                  promptText="Enter Message" style="-fx-background-color: #9E2828;"/>
                        <Button fx:id="sendButton" defaultButton="true" mnemonicParsing="false"
                                onAction="#sendButtonClick" pickOnBounds="false" prefHeight="52.0" prefWidth="124.0"
                                style="-fx-background-color: #9E2828;" text="SEND" textFill="WHITE"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <AnchorPane prefHeight="50.0" prefWidth="900.0" style="-fx-background-color: #482628;"
                    BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="exitButton" layoutX="862.0" layoutY="13.0" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="5.0" style="-fx-background-color: #D95353;" text="X"/>
                <Button fx:id="minimizeButton" layoutX="832.0" layoutY="13.0" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="5.0" style="-fx-background-color: #D95353;" text="_"/>
                <Label fx:id="username" layoutX="14.0" layoutY="12.0" prefHeight="53.0" prefWidth="305.0"
                       textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>
    <stylesheets>
        <URL value="@ChatStyle.css"/>
    </stylesheets>
</BorderPane>
