<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mypackage.chat.ChatController">
    <left>
        <VBox prefHeight="600.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="76.0" prefWidth="300.0">
                    <children>
                        <Label prefHeight="76.0" prefWidth="213.0" text="Users online:" textAlignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="usersCounter" prefHeight="76.0" prefWidth="256.0" text="0" textAlignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <ListView fx:id="usersOnline" prefHeight="542.0" prefWidth="300.0"/>
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <ScrollPane prefHeight="528.0" prefWidth="600.0">
                    <content>
                        <ListView fx:id="messages" prefHeight="505.0" prefWidth="585.0"/>
                    </content>
                </ScrollPane>
                <HBox prefHeight="63.0" prefWidth="600.0">
                    <children>
                        <TextArea fx:id="message" prefHeight="68.0" prefWidth="486.0" promptText="Enter Message"/>
                        <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="92.0" prefWidth="142.0"
                                text="Send" onAction="#sendMessage"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <HBox prefHeight="53.0" prefWidth="900.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="username" prefHeight="59.0" prefWidth="194.0" textAlignment="CENTER">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
</BorderPane>
